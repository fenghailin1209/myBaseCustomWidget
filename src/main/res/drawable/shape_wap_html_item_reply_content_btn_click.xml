<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 圆角 -->
    <corners
        android:radius="3dp"
         
       /><!-- 设置圆角半径 -->
    <!-- 描边 -->  
    <stroke  
        android:width="0.5dp"   
        android:color="@color/white" /> <!-- 定义描边的宽度和描边的颜色值 -->
    <!-- 填充 -->
    <solid
        android:color="#3C76FF"/><!-- 填充的颜色 -->
    <padding
        android:left="1dip"
        android:top="1dip"
        android:right="1dip"
        android:bottom="1dip"
        />

</shape>