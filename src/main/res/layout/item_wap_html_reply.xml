<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_item_wap_html_reply_head_iv"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:scaleType="centerCrop"
                android:src="@drawable/tengxun_icon" />

            <LinearLayout
                android:layout_marginLeft="5dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_item_wap_html_reply_nick_iv"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="朴槿惠出院又受审 新鞋抢眼(图)朴槿惠出院又受审 新鞋抢眼(图)朴槿惠出院又受审 新鞋抢眼(图)"
                        android:textColor="#C5BFB2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_item_wap_html_reply_praise_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:singleLine="true"
                        android:text="56顶"
                        android:textColor="#B2B2B2" />
                </LinearLayout>

                <TextView
                    android:id="@+id/id_item_wap_html_reply_location_iv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="成都市武侯区天府新谷"
                    android:textColor="#B2B2B2" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip"
            android:orientation="vertical">

            <com.example.mybasecustomwidget.view.ReplyAgainReplyListView
                android:layout_marginTop="5dip"
                android:background="@drawable/shape_wap_html_item_reply"
                android:id="@+id/id_reply_again_reply_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/id_item_wap_html_reply_content_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_describe"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dip"
                android:text="改我和高hi诶给hi二号给干涸 交管IE交管IE西安为何落后？书记给出答案|4000公里时速列车能否坐起 官方回应证监会原副主席姚刚涉受贿罪被查|印度一居民楼坍塌 被埋人数不明女教师失联的38天:行程变更原因成迷|日方近期将转交遗体给家属"
                android:textColor="#525252"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/news_bottom_line" />
</LinearLayout>