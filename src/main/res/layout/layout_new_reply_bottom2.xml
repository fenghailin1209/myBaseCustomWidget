<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#E4E4E1" />
        <EditText
            android:textSize="14sp"
            android:padding="5dip"
            android:gravity="top"
            android:textColor="#525252"
            android:hint="你这么聪明，说什么都对"
            android:textColorHint="@color/light_gray_color"
            android:id="@+id/id_new_reply_et"
            android:background="@drawable/shape_wap_html_item_reply_content"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="10dip"
            android:layout_width="match_parent"
            android:layout_height="80dip" />

        <TextView
            android:id="@+id/id_new_reply_send_tv"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="发表"
            android:background="@drawable/btn_no_broder_nopress"
            android:layout_gravity="right"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="20dip"/>
    </LinearLayout>
</LinearLayout>