<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fhl="http://schemas.android.com/apk/res/com.example.mybasecustomwidget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- android:background="@drawable/my_room_join_btn_normal" -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dip"
        android:background="@drawable/shape_barrage"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.example.mybasecustomwidget.view.CircleImageView
            android:id="@+id/id_head_iv"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_marginLeft="3.5dip"
            android:src="@drawable/guide_photo_18"
            fhl:dborder_color="#ddd"
            fhl:dborder_width="0dp" />

        <TextView
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:textSize="15sp"
            android:id="@+id/id_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssssssssssss"/>
    </LinearLayout>

</LinearLayout>