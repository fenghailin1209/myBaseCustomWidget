<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/head_color_panda"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/id_new_back_view"
            android:layout_width="50dip"
            android:layout_height="50dip">

            <TextView
                android:layout_width="15dip"
                android:layout_height="25dip"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_new_reply_back"
                android:gravity="center"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/id_title_tv"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="测试标题"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/id_new_more_view"
            android:layout_width="50dip"
            android:layout_height="50dip">

            <TextView
                android:layout_width="25dip"
                android:layout_height="7dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/ic_panda_more"
                android:gravity="center"
                android:textSize="16sp"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/news_bottom_line" />
</LinearLayout>