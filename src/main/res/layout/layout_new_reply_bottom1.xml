<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:clickable="true"
    android:layout_alignParentBottom="true"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#E4E4E1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_reply_tv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="3dip"
            android:layout_weight="2"
            android:background="@drawable/shape_reply_bottom_bg"
            android:gravity="center_vertical"
            android:hint="写评论"
            android:paddingLeft="5dip"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/id_reply_rl"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/ih" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_bottom_reply_total_count_tv"
                        android:paddingRight="3dip"
                        android:paddingLeft="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="15dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/msgboder"
                        android:gravity="center"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <!--android:background="@drawable/menu_bookmark"-->
                <TextView
                    android:id="@+id/id_like_tv"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/menu_screenshot"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>